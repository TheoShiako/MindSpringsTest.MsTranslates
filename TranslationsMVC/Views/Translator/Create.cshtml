@model TranslatorModel

<div class="card shadow border-0 mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <h2>New Translator</h2>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow"/>
                    <label asp-for="Name" class="ms-2"/>
                    <span asp-validation-for="Name" class="text-danger"/>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="BaseUrl" class="form-control border-0 shadow" />
                    <label asp-for="BaseUrl" class="ms-2" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ApiKey" class="form-control border-0 shadow" />
                    <label asp-for="ApiKey" class="ms-2" />
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">
                        Save
                    </button>
                </div>

                <div class="col-6 col-md-3">
                    <a asp-controller="Translator" asp-action="Index" class="btn btn-primary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>

</div>